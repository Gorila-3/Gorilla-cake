<div class="container">
  
  <div class="row">
      <div class="col-md-1"></div>
      <div class="col1-md-3"><h4>ジャンル編集</h4></div>
  </div>
  
  <%= form_with model: @category, url: admins_category_path, method: :put, local:true do |f| %>
    <div class="row">
      <div class="col-md-2"><p>ジャンル名</p></div> 
      <div class="col-md-3"><%= f.text_field :name, size: "27%" %></div>
      <div class="col-md-3"><%= f.submit '変更を保存',class: "btn btn-success" %></div>
    </div>
  <% end %> 
  
</div>
    
    