商品一覧
<%=link_to "商品登録", new_admins_item_path %>
<table>
  <thead>
    <tr>
      <th>商品id</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%=item.id %></td>
      <td><%= link_to item.name, admins_item_path(item.id) %></td>
      <td><%=item.price %></td>
      <td><%=item.category.name %></td>
      <td></td>
    <% if item.is_active %>
      <td class="text-success">販売中</td>
    <% else %>
      <td class="text-muted">販売停止中</td>
    <% end %>  
    </tr>
    <% end %>
    <%= paginate @items %>
  </tbody>
</table>
