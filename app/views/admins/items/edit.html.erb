<h2>商品編集</h2>
<%= render 'layouts/error', obj: @item %>
<%= form_with model: [:admin,@item], url: admins_item_path, method: :put, local:true do |f| %>
<div class="form">
  <div class="form-grop-row">
    <label for ="InputImage">商品画像</label>
      <%= f.attachment_field :image %>
  </div>
  <div class="form-group-row">
    <lavel for ="InputName">商品名</lavel>
      <%=f.text_field :name %>
  </div>
  <div class="form-group-row">
    <lavel for ="InputIntroduction">商品説明</lavel>
      <%=f.text_area :introduction %>
  </div>
    ジャンル
   <%=f.collection_select :category, @categories, :id, :name, {prompt: "選択してください"} %>
  <div class="form-group-row">
    <label for="InputPrice">税抜き価格</label>
     <%=f.text_field :price %>
  </div>
  <div class="form-check">
   販売ステータス
   販売中<%=f.radio_button :is_active, true %>
   販売停止中<%=f.radio_button :is_active, false %>
  </div>
  <%= f.submit '変更を保存', class: "btn btn-success" %>
</div>
<% end %>
