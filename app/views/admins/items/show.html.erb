<body>
  <h2>商品詳細</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= attachment_image_tag @item, :image,format: 'jpeg', fallback: "no_image.jpg", size:"200x200"  %>
      </div>
      <div class="col-md-8">
          <p>商品名</p><%= @item.name %>
          <P>商品説明</p><%= @item.introduction %>
          <p>ジャンル</p><%= @item.category.name %>
          <p>税込価格</p><%=(@item.price*@tax.round(2)).ceil%>
          <p>税抜き価格</p>(<%= @item.price %>)円
          <p>販売ステータス</p>
        <% if @item.is_active %>
          <p class="text-success">販売中</p>
        <% else %>
        <p class="text-muted">販売停止中</p>
        <% end %>
        <%= link_to '編集する', edit_admins_item_path(@item), class: "btn btn-success"%>
      </div>
    </div>
  </div>
</body>