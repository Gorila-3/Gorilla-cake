<div class="col-md-5 offset-md-1">
<h2><%= @customer.last_name %>さんの会員詳細</h2>
<table class="table">
  <tbody>
      <tr>
        <th style="border:none;">会員ID</th>
        <th style="border:none;"><%= @customer.id %></th>
      </tr>
      <tr>
        <th style="border:none;">氏名</th>
        <th style="border:none;">
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </th>
      </tr>
      <tr>
        <th style="border:none;">フリガナ</th>
        <th style="border:none;">
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </th>
      </tr>
      <tr>
        <th style="border:none;">郵便番号</th>
        <th style="border:none;"><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th style="border:none;">住所</th>
        <th style="border:none;"><%= @customer.address %></th>
      </tr>
      <tr>
        <th style="border:none;">電話番号</th>
        <th style="border:none;"><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th style="border:none;">メールアドレス</th>
        <th style="border:none;"><%= @customer.email %></th>
      </tr>
      <tr>
        <th style="border:none;">会員ステータス</th>
        <th style="border:none;">
          <% if @customer.is_deleted %>
            退会
          <% else %>
            <font color="green">有効</font>
          <% end %>
        </th>
      </tr>
  </tbody>
</table>
<div class="row">
  <div class="col-3"><%= link_to "編集する", edit_admins_customer_path(@customer.id), class: "btn btn-success" %></div>
  <div class="col-8"><%= link_to "注⽂履歴⼀覧を⾒る", admins_orders_path, class: "btn btn-primary" %></div>
</div>
</div>