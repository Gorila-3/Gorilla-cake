<div class="col-md-5 offset-md-1">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <%= form_with model: @customer, url:"/admins/customers/#{@customer.id}", local:true do |f| %>
  <table class="table">
    <tbody>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= f.text_field :last_name %><%= f.text_field :first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= f.text_field :postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= f.text_field :address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= f.telephone_field :telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= f.email_field :email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th><%= f.radio_button "is_deleted", false %>有効 <%= f.radio_button "is_deleted", true %>退会 </th>
      </tr>
    </tbody>
  </table>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
</div>