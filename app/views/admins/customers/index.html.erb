<div class="col-md-8 offset-md-2">
<h2>会員一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admins_customer_path(customer.id) do %>
            <%= customer.last_name %>
            <%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted %>
            退会
          <% else %>
            <font color="green">有効</font>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>