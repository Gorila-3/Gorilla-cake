<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h2>ロゴ</h2>
    <% if admin_signed_in? %>
      <li>
        <%= link_to "商品一覧", admins_items_path %>
      </li>
      <li>
        <%= link_to "会員一覧", admins_customers_path %>
      </li>
      <li>
        <%= link_to "注文履歴一覧", admins_orders_path %>
      </li>
      <li>
        <%= link_to "ジャンル一覧", admins_categories_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% elsif customer_signed_in? %>
      <li>
        <%= link_to "マイページ", customers_customers_path %>
      </li>
      <li>
        <%= link_to "商品一覧", customers_items_path %>
      </li>
      <li>
        <%= link_to "カート", customers_cart_items_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "商品一覧", customers_items_path %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>
    <%= yield %>
  </body>
</html>
