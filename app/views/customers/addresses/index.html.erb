<p>配送先登録/一覧</p>
<%= form_with model: @address, url:"/customers/addresses", method: :post, local:true do |f| %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<div class="col-md-8 offset-md-1">
  <table class="table">
    <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @address.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_customers_address_path(address), class: "btn btn-success" %>
          <%= link_to "削除する", customers_address_path(address.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>
    
    
