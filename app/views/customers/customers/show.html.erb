<h2>マイページ</h2>
<div class="form-inline">
    <h3 class="mr-2">登録情報</h3>
    <div class="mypage-top-link">
     <%= link_to "編集する", edit_customers_customers_path, class: "btn btn-success" %>
    </div>
</div>

<div class="mypage-info">
 <table>
     <tr>
         <th>氏名</th>
         <td><%= @customer.last_name%> <%= @customer.first_name%></td>
     </tr>
     <tr>
         <th>カナ</th>
         <td><%= @customer.last_name_kana%> <%= @customer.first_name_kana%></td>
     </tr>
     <tr>
         <th>郵便番号</th>
         <td><%= @customer.postal_code %></td>
     </tr>
     <tr>
         <th>住所</th>
         <td><%= @customer.address%></td>
     </tr>
     <tr>
         <th>電話番号</th>
         <td><%= @customer.telephone_number%></td>
     </tr>
     <tr>
         <th>メールアドレス</th>
         <td><%= @customer.email%></td>
     </tr>
 </table>
</div>

<div class="mypage-buttom-link">
  
    <div class="form-inline mb-4">
      <h4 class="mr-2">配送先</h4>
       <%= link_to "一覧を見る", customers_addresses_path, class: "btn btn-primary" %>
    </div>
    
    <div class="form-inline">
      <h4 class="mr-2">注文履歴</h4>
       <%= link_to "一覧を見る", customers_orders_path, class: "btn btn-primary" %>
    </div>
    
</div>