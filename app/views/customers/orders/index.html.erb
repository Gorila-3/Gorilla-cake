<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
      <td class="customer-order-address-list">
          <p>〒<%= order.postal_code %></p>
          <p><%= order.address%></p>
          <p><%= order.name %></p>
      </td>
      <td class="customer-order-items">
        <% order.items.each do |item| %>
          <%= item.name%><br>
        <% end %>
      </td>
      <td class="customer-total-price">
        <%= order.total_payment.to_s(:delimited, delimiter: ',') %>円
      </td>
      <td class="customer-order-status">
        <%= order.status%>
      </td>
      <td class="customer-order-detail">
        <%= link_to "表示する",customers_order_path(order), class: "btn btn-primary "%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>