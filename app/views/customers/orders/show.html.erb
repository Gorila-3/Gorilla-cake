<h2>注文履歴詳細</h2>
  <div class = "container">
    <div class="row">
      <div class="col-md-6">
        <div class="customer-order-info">
          <h4>注文情報</h4>
          <table class="table">
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                <p>〒<%= @order.postal_code %></p>
                <p><%= @order.address%></p>
                <p><%= @order.name %></p>
              </td>
            </tr>
            <tr>
              <th>支払い方法</th>
              <td><%= @order.total_payment.to_s(:delimited, delimiter: ',') %>円</td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= @order.status%></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="col-md-3">
        <div class="customer-order-payment-imfo">
          <h4>請求情報</h4>
          <table class="table">
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_payment - @order.shipping_cost %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= @order.shipping_cost.to_s(:delimited, delimiter: ',') %></td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <td><%= @order.total_payment.to_s(:delimited, delimiter: ',') %></td>
            </tr>
          </table>
        </div>
      </div>
        <div class="col-md-3"></div>
    </div>
  </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="customer-order-items-info">
            <h4>注文内容</h4>
            <table class="table">
              <thead>
                <tr>
                  <th>商品</th>
                  <th>単価（税込）</th>
                  <th>個数</th>
                  <th>小計</th>
                </tr>
              </thead>
              <tbody>
                <% @order_details.each do |order_detail|%>
                <tr>
                  <td><%= order_detail.item.name%></td>
                  <td><%= order_detail.price.to_s(:delimited, delimiter: ',') %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= (order_detail.price * order_detail.amount).to_s(:delimited, delimiter: ',') %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-4"></div>
      </div>
    </div>