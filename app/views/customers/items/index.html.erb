<div class="container">
 <div class="row2"></div>
 <div class="row">
  <div class="col-md-1"></div>
  <div class="col1-md-3"><h4>商品一覧　(全<%= @items.count %>件)</h4></div>
 </div>
 
 <div class="row3"></div>
  
 <!--<div class="row">-->
 <!-- <div class="col-md-1"></div>-->
  
  <div class="items-all">
   <% @items.each do |item| %>
    <div class="items" >
     <% if item.is_active == true%>
       <p>
        <%= attachment_image_tag item, :image,format: 'jpeg', fallback: "no_image.jpg", size:"200x150"  %><br>
        <%=link_to item.name, customers_item_path(item.id) %><br>
        ¥<%= item.price %>
       </p>
     <% end %>
    </div>
   <% end %>
  </div>
  
