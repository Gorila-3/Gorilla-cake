<h2>商品一覧</h2>
<p>全<%= @items.count %>件</p>

<div class="items-list">
  <% @items.each do |item| %>
   <% if item.is_active == true%>
    <%= attachment_image_tag item, :image,format: 'jpeg', fallback: "no_image.jpg", size:"100x100"  %>
    <%=link_to item.name, customers_item_path(item.id)  %>
    ¥<%= item.price %>
   <% end %>
  <% end %>
<%= paginate @items %>
</div>

