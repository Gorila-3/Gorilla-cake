<div class="container">
 <div class="row2"></div>
 <div class="row">
  <div class="col-md-1"></div>
  <div class="col1-md-3"><h4>商品一覧　(全<%= @items.count %>件)</h4></div>
 </div>
 
 <div class="row2"></div>
  
 <div class="row">
  <div class="col-md-1"></div>
   <!--<div class="col1-md-10">-->
     <% @items.each do |item| %>
      <% if item.is_active == true%>
        <%= attachment_image_tag item, :image,format: 'jpeg', fallback: "no_image.jpg", size:"100x100"  %>
        <p><%=link_to item.name, customers_item_path(item.id) %></p>
        <p>¥<%= item.price %></p>
      <% end %>
     <% end %>
   </div>
 </div>

</div>  
