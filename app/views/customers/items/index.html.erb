<h2>商品一覧</h2>
<p>全<%= @items.count %>件</p>

<div class="items-list">
  <% @items.each do |item| %>
    <%= attachment_image_tag item, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
    <%=link_to item.name, customers_item_path(item.id)  %>
    ¥<%= item.price %>
  <% end %>
</div>

