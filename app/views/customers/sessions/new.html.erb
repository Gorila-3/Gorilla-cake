<h2>ログイン</h2>

<h3>会員の方はこちらからログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table>
  <div class="field">
    <tr>
      <th><%= f.label :メールアドレス %><br /></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th><%= f.label :パスワード %><br /></th>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>
  </div>
</table>

  <div class="actions ">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
