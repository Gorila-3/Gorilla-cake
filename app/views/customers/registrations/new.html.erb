<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

<table>
  <tr>
    <th>名前</th>
    <td>
      <div class="field">
        <%= f.label :（姓） %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.label :（名） %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
      </div>
    </td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td>
      <div class="field">
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana, autocomplete: "first_name_kana"%>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana, autocomplete: "last_name_kana"%>
      </div>
    </td>
  </tr>
  <tr>
    <th><%= f.label :メールアドレス %><br /></th>
    <td><%= f.email_field :email, autocomplete: "email" %></td>
  </tr>
  <tr>
    <th><%= f.label :郵便番号（ハイフンなし） %><br /></th>
    <td><%= f.text_field :postal_code, autocomplete: ":postal_code"%></td>
  </tr>
  
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address, autocomplete: ":address"%></td>
  </tr>
  
  <tr>
    <th><%= f.label :電話番号（ハイフンなし） %></th>
    <td><%= f.text_field :telephone_number, autocomplete: ":telephone_number"%></td>
  </tr>
  
  <tr>
    <th> <%= f.label :パスワード %>
      <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br /></th>
    <td> <%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>
  
  <tr>
    <th><%= f.label :パスワード（確認用） %><br /></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
</table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>

